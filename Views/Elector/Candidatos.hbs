<main>
    {{!-- <h1 class="text-center py-3">ELIJA UN CANDIDATO</h1> --}}
    <a href="/puestos-electorales{{Elector.DocumentoDeIdentidad}}">
        <button class="btn btn-primary mt-2 px-5 ms-2">
            <img src="/assets/img/btn-regresar.png">
        </button>
    </a>
    <div class="container-lg border mt-3 p-3">
        <form method="post" action="" class="row justify-content-center">
            <div class="mb-3">
                <button id="btn-votar" class="btn btn-primary px-5 py-3" disabled>VOTAR</button>
            </div>
            {{#each candidatos}}
            <div class="border border-dark  mb-3 p-0 mx-1" style="max-width: 540px; height: auto; border-radius: 10px">
                <div class="row g-0">
                    <img class="col-12 col-md-4" style="object-fit: cover; border-radius: 10px;" src="{{Foto}}"
                        class=" card img-fluid h-100" alt="img">
                    <div class="col-12 col-md-8">
                        <div class="card-body">
                            <div class="row m-0 p-2">
                                <div class="col-8">
                                    <h5 class="card-title">{{Nombre}}</h5>
                                    <p class="card-text">{{puesto_electivo.Nombre}}</p>
                                </div>
                                <input onchange="activeButton()" value="{{Id}}" type="radio"
                                    name="CandidatoIdSeleccionado" style="height: 5rem; width: 5rem;;">
                            </div>
                            <div class="d-flex bg-white border-top pt-1">
                                <img src="{{partido.Logo}}" alt="logo"
                                    style="height: 5rem; width: 5rem; border-radius: 2.5rem">
                                <p class="p-1 fs-5" style="height: 5rem; margin: 0px;">{{partido.Nombre}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </form>
    </div>
</main>